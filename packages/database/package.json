{
  "name": "@staffnbdt/database",
  "version": "0.0.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "seed:complete": "node scripts/seed-complete-data.js",
    "seed:dev": "dotenv -e .env.dev -- node scripts/seed-complete-data.js",
    "seed:local": "dotenv -e .env.local -- node scripts/seed-complete-data.js",
    "seed:production": "dotenv -e .env.production -- node scripts/seed-complete-data.js",
    "cleanup:production": "node scripts/cleanup-test-data.js",
    "cleanup:confirm": "CONFIRM_CLEANUP=true node scripts/cleanup-test-data.js",
    "migrate:deploy": "node scripts/deploy-migrations.js",
    "migrate:create": "prisma migrate dev",
    "migrate:status": "prisma migrate status",
    "migrate:reset": "prisma migrate reset",
    "studio:dev": "dotenv -e .env.dev -- prisma studio",
    "studio:local": "dotenv -e .env.local -- prisma studio",
    "studio:production": "dotenv -e .env.production -- prisma studio",
    "permissions:seed": "tsx scripts/seed-permissions.ts",
    "permissions:migrate": "tsx scripts/migrate-permissions.ts",
    "permissions:rollback": "ROLLBACK=true tsx scripts/migrate-permissions.ts",
    "permissions:validate": "tsx scripts/validate-permission-coverage.ts",
    "permissions:setup": "npm run permissions:seed && npm run permissions:migrate && npm run permissions:validate",
    "permissions:check:production": "tsx scripts/check-production-permissions.ts",
    "permissions:fix:production": "tsx scripts/fix-production-permissions.ts",
    "permissions:verify:user": "tsx scripts/verify-user-permissions.ts",
    "permissions:verify:fix": "tsx scripts/verify-production-fix.ts",
    "deploy:production:permissions": "tsx scripts/deploy-production-permissions.ts",
    "deploy:production:schema-only": "SKIP_PERMISSION_INIT=true tsx scripts/deploy-production-permissions.ts",
    "deploy:production:dry-run": "DRY_RUN=true tsx scripts/deploy-production-permissions.ts",
    "verify:production": "tsx scripts/verify-production-deployment.ts",
    "verify:production:detailed": "DETAILED=true tsx scripts/verify-production-deployment.ts",
    "rollback:production:permissions": "tsx scripts/rollback-production-permissions.ts",
    "rollback:production:dry-run": "DRY_RUN=true tsx scripts/rollback-production-permissions.ts",
    "health:production": "tsx scripts/health-check-production.ts",
    "health:production:json": "JSON_OUTPUT=true tsx scripts/health-check-production.ts",
    "health:production:alert": "ALERT_ON_FAILURE=true tsx scripts/health-check-production.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "dotenv-cli": "^7.3.0",
    "prisma": "^5.22.0",
    "tsx": "^4.7.0"
  }
}
