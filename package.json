{
  "name": "staffnbdt",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "echo 'Run npm run dev:bff or npm run dev:web'",
    "dev:bff": "cd apps/bff && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "start:prod": "cd apps/bff && node dist/main.js",
    "install:all": "npm install && cd packages/database && npm install",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:push": "cd packages/database && npx prisma db push",
    "db:studio": "cd packages/database && npx prisma studio",
    "db:migrate:deploy": "cd packages/database && node scripts/deploy-migrations.js",
    "db:migrate:status": "cd packages/database && npx prisma migrate status",
    "db:migrate:create": "cd packages/database && npx prisma migrate dev",
    "build": "npm run db:generate",
    "postinstall": "npm run db:generate",
    "test:setup": "npx playwright install --with-deps",
    "test:e2e": "npx playwright test",
    "test:logging": "npx playwright test tests/logging",
    "test:performance": "npx playwright test tests/performance",
    "test:integration": "npx playwright test tests/integration",
    "test:railway": "npx playwright test tests/e2e/railway-deployment.test.ts",
    "test:all": "npm run test:e2e",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report"
  },
  "devDependencies": {
    "turbo": "^2.4.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.10.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
