# ==============================================
# STAFFNBDT HR Portal Environment Configuration
# ==============================================

# Database (Get from Railway PostgreSQL service)
DATABASE_URL=postgresql://user:password@host:port/railway

# Backend Configuration
PORT=3000
NODE_ENV=development

# Frontend Configuration
VITE_API_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-jwt-secret-here-use-strong-secret
JWT_EXPIRY=7d

# Storage Configuration
# Local storage (Railway Volume)
STORAGE_PATH=/app/storage
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx,mp4,avi

# Storage Strategy
# Set to 'true' to use Cloudflare R2 instead of local storage
STORAGE_USE_R2=false
# Set to 'true' to use both R2 and local storage (hybrid mode)
STORAGE_HYBRID_MODE=false

# Cloudflare R2 Configuration
# Get these values from Cloudflare R2 dashboard
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=staffnbdt-storage
R2_PUBLIC_URL=https://your-bucket.r2.dev
# Note: PUBLIC_URL is optional - only set if you've configured a custom domain

# Email Configuration (for notifications and magic links)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@staffnbdt.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Security
CORS_ORIGINS=http://localhost:3001,https://your-domain.com
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_ENABLED=true

# Worker Configuration (if using background jobs)
REDIS_URL=redis://localhost:6379
QUEUE_NAME=staffnbdt-jobs

# Permission System Configuration
# Set to true to skip permission system initialization on startup
# Useful during deployment when permission tables haven't been migrated yet
SKIP_PERMISSION_INIT=false
PERMISSION_CACHE_TTL=3600
PERMISSION_MAX_CACHE_SIZE=10000

# For production on Railway, database and some variables will be auto-configured