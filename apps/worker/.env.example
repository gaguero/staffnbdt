# Database
DATABASE_URL=postgresql://username:password@localhost:5432/staffnbdt

# Redis
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@nayara.com
SMTP_PASS=app_password
FROM_EMAIL="Nayara HR Portal <noreply@nayara.com>"

# AWS S3 / R2 Configuration
S3_BUCKET=staffnbdt-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# File Processing
MAX_FILE_SIZE=50000000
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,mp4,mov,avi

# ClamAV (Antivirus)
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Application
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Puppeteer (PDF Generation)
PUPPETEER_EXECUTABLE_PATH=
CHROME_BIN=

# Job Configuration
MAX_JOB_ATTEMPTS=3
JOB_RETRY_DELAY=5000