{
  "name": "@staffnbdt/worker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "nodemon --exec ts-node -r tsconfig-paths/register src/main.ts",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@staffnbdt/database": "workspace:*",
    "@prisma/client": "^5.11.0",
    "bull": "^4.12.2",
    "ioredis": "^5.3.2",
    "winston": "^3.11.0",
    "nodemailer": "^6.9.13",
    "puppeteer": "^22.4.0",
    "sharp": "^0.33.2",
    "csv-parser": "^3.0.0",
    "csvtojson": "^2.0.10",
    "clamav.js": "^2.0.0",
    "aws-sdk": "^2.1576.0",
    "handlebars": "^4.7.8",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "reflect-metadata": "^0.2.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/express": "^4.17.21",
    "@types/bull": "^4.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.8",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": ["<rootDir>/dist/"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/**/*.test.ts"
    ]
  }
}